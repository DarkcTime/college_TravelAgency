<Window x:Class="TravelAgency.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.Windows"
        mc:Ignorable="d"
        Title="Главное окно" MinHeight="450" MaxHeight="600" MinWidth="800" Height="550" Width="800" Icon="/TravelAgency;component/Resource/phoenix.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.4*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/TravelAgency;component/Resource/phoenix.png"></Image>
            <TextBlock Grid.Column="1" FontWeight="Bold">Туристическое агенство "Феникс"</TextBlock>
            <Button Click="ClickBtnExit" Grid.Column="2" Background="White" BorderBrush="White" >Выход</Button>
            
        </Grid>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden">
            
        </Frame>
    </Grid>
</Window>
